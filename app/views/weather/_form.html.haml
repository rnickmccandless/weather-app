= form_with model: weather, scope: :address, url: weather_path, data: { turbo_frame: "_top" } do |f|
  .modal-header
    %h5.modal-title Weather Forecast
    = link_to '', :back, class: "btn-close", data: {turbo_frame: "_top"}

  .modal-body.mx-4
    = turbo_frame_tag "flash" do
      = render partial: "shared/flash_messages"

    .mb-3.row
      .col
        = f.label :street, class: 'form-label'
        = f.text_field :street, class: 'form-control', required: true
    .row.mb-3
      .col-8
        = f.label :city, class: 'form-label'
        = f.text_field :city, class: 'form-control', required: true
      .col-4
        = f.label :state, class: 'form-label'
        = f.select :state, options_for_select(us_states), {}, class: 'form-select', required: true
    .row.mb-3
      .col
        = f.label :zipcode, class: 'form-label'
        = f.text_field :zipcode, class: 'form-control', required: true
      .col
        = f.label :country, class: 'form-label'
        = f.text_field :country, class: 'form-control', required: true

  .modal-footer
    = link_to "Close", :back, class: "btn btn-secondary", data: {turbo_frame: "_top"}
    = f.submit "What's my forecast?", class: 'btn btn-primary'
